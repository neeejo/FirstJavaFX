<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<AnchorPane fx:id="container" prefHeight="1048.0" prefWidth="1920.0"
            maxHeight="1048.0" maxWidth="1920.0" stylesheets="@../../../stylesheet.css"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.firstjavafx.controller.RootController">
    <ScrollPane fx:id="scrollPane" fitToWidth="true" pannable="true" prefWidth="1920">
        <TilePane fx:id="movieCards"
                  alignment="CENTER_LEFT"
                  onMouseClicked="#playMedia"
        >
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </TilePane>
        <Label fx:id="emptyFolder" visible="false" alignment="CENTER"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </ScrollPane>
</AnchorPane>
